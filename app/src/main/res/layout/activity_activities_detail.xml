<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="io.keepcoding.madridshops.activities.ActivitiesDetailActivity">


    <ImageView
        android:id="@+id/activity_activities_detail__activity_image"
        tools:src="@drawable/activity_placeholder"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>

    <TextView
        android:id="@+id/activity_activities_detail__activity_name"
        tools:text="Activity"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:textColor="@android:color/white"
        android:textSize="40sp"
        android:gravity="center_horizontal|bottom"
        android:background="@android:color/black"
        android:alpha="0.6"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:id="@+id/activity_activities_detail__activity_address"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        tools:text="Address"
        android:layout_below="@id/activity_activities_detail__activity_image"
        />


    <ScrollView
        android:id="@+id/activity_activities_detail__scroll_description"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/activity_activities_detail__activity_address">

        <TextView
            android:id="@+id/activity_activities_detail__activity_description"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            tools:text="Description"
            />

    </ScrollView>


    <ImageView
        android:id="@+id/activitiy_activities_detail__map_image"
        android:src="@drawable/map2_placeholder"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/activity_activities_detail__scroll_description"
        />


</RelativeLayout>
